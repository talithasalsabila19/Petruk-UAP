#include <iostream>
#include <cstring>
using namespace std;

struct data{
    char nama[50];
    string npm; 
};

class Matkul{
public:
    char n[50];
    int sks;
    
    void matakuliah(){
        cout << "Masukan matakuliah: ";
        cin.getline(n, 50);
        cout << "Masukan SKS: ";
        cin >> sks;
        cin.ignore();
        
        cout << "\n--- Data Matkul ---\n";
        cout << "Mata kuliah : " << n << endl;
        cout << "Jumlah SKS : " << sks << endl;
    }
    

void menu(){
    int pilih;
    const int maks = 10; // tadi nya kan cuma bisa nyimpen 1 data nah kalo pake ini jadi bisa nyimpen banyak data, tp maksimal 10
        data daftarMhs[maks]; // utk nyimpen bnyk mahasiswa
        char daftarMatkul[maks][50]; // utk bnyk matkul
        int daftarSKS[maks]; // utk bnyk sks
        int jumlahMhs = 0; // utk tau brp bnyk data di masukkan
        int jumlahMatkul = 0; // ini jg sma
        
    while(true){
        
        cout << "\n=== Sistem Informasi Mahasiswa ===" << endl;
        cout << "1. Daftar" << endl;
        cout << "2. Tambahkan mata kuliah" << endl;
        cout << "3. Tampilkan semua data" << endl;
        cout << "4. Keluar" << endl;
        cout << "Pilih : ";
        cin >> pilih;
        cin.ignore();
    
        if (pilih == 1){
            if (jumlahMhs < maks) {
                cout << "Masukan nama : ";
                cin.getline(daftarMhs[jumlahMhs].nama, 50); // utk ngebaca input nama mahasiswa sm nyimpen array ke daftarMhs. pke getline biar bisa baca kalimat penuh

    
                cout << "Masukan npm : ";
                cin >> daftarMhs[jumlahMhs].npm;
                cin.ignore();
    
    
                cout << "\n~~~ Data Mahasiswa ~~~" << endl;
                cout << "Nama: " << daftarMhs[jumlahMhs].nama << endl;
                cout << "NPM:  " << daftarMhs[jumlahMhs].npm << endl;
        
        jumlahMhs++; 
    }else{
        cout << "Data mahasiswa penuh!" << endl;
    }
    
    }else if (pilih == 2){
        if (jumlahMatkul < maks) {
            cout << "Masukan matakuliah: ";
            cin.getline(daftarMatkul[jumlahMatkul], 50);
            cout << "Masukan SKS: ";
            cin >> daftarSKS[jumlahMatkul];
            cin.ignore();
            // blok di atas itu  klo kta pilih 2 bakal keluar matkul apa yg mau kita ketik dan jumlah sks nya 

            cout << "\n~~~ Data Matkul ~~~\n";
            cout << "Mata kuliah : " << daftarMatkul[jumlahMatkul] << endl;
            cout << "Jumlah SKS  : " << daftarSKS[jumlahMatkul] << endl;
            // ini nti bkl kluar hasilny
            
            jumlahMatkul++;
                } else {
                    cout << "Data matkul penuh!" << endl; //kl matkul ud lebih dri 10 bakal ada pesan ini
                }

            } else if (pilih == 3) {
                cout << "\n--- Semua Data Mahasiswa ---" << endl;
                for (int i = 0; i < jumlahMhs; i++) {
                    cout << i + 1 << ". Nama: " << daftarMhs[i].nama << ", NPM: " << daftarMhs[i].npm << endl;
                }

                cout << "\n--- Semua Jadwal Mata Kuliah ---" << endl;
                for (int i = 0; i < jumlahMatkul; i++) {
                    cout << i + 1 << ". " << daftarMatkul[i] << " - SKS: " << daftarSKS[i] << endl;
                }
                // kl kta pilih 3 bkal kluar data yg tdi kta isi, nama, npm, matkul, sks

            } else if (pilih == 4) {
                cout << "Terima kasih.\n";
                break;

            } else {
                cout << "Error: Pilihan tidak valid." << endl; // kl kta ketik bkn 1-4 kluar tulisan begindang
            }
        }
    }
};

int main() {
    Matkul a;
    a.menu();

    return 0;
}

  
